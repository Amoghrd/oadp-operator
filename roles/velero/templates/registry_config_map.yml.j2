---
apiVersion: v1
kind: ConfigMap
metadata:
  name: registry-config
  namespace: {{ velero_namespace }}
data:
{% if velero_aws_bsl_configs | int != 0 %}
  aws-registry: aws-registry-route
{% endif %}
{% if velero_gcp_bsl_configs | int != 0 %}
  gcp-registry: gcp-registry-route
{% endif %}
{% if velero_azure_bsl_configs | int != 0 %}
  azure-registry: azure-registry-route
{% endif %}
